<div class="container">
  <h1>New review to <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: "Review" %>
    <%= f.input :rating, :collection => 0..5 %>
    <%= @parmas %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-secondary mt-2"%>
</div>
