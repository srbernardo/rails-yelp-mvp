<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= link_to "Back to restaurants", root_path, class: "btn btn-secondary mb-3"%>
  <h1 class="mt-3"><%= @restaurant.name %></h1>

  <%= render @restaurant %>

  <div class="d-flex justify-content-between mt-3">
    <div class="mb-2">
      <%= link_to "New review", new_restaurant_review_path(@restaurant), class: "btn btn-info" %>
      <%= link_to "Reviews", review_path(@restaurant), class: "btn btn-dark" %>
    </div>
    <div class="d-flex">
      <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-warning me-2" %>
      <%= button_to "Destroy", @restaurant, class: "btn btn-danger", data:{ turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
