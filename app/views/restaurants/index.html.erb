<div class="container p-3">
  <p style="color: green"><%= notice %></p>

  <h1>Restaurants</h1>

  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>

  <div class="card my-3" id="restaurants">
    <% @restaurants.each do |restaurant| %>
      <div class="card-body">
        <%= render restaurant %>
      </div>
    <% end %>
  </div>
</div>
